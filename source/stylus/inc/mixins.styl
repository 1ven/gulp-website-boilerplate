$rootFontVal = 16
$rootFontSize = $rootFontVal px

$max_xs = '(max-width 768px)'
$max_sm = '(max-width 992px)'
$max_md = '(max-width 1200px)'
$max_lg = '(max-width 1500px)'

$min_sm = '(min-width 769px)'
$min_md = '(min-width 993px)'
$min_lg = '(min-width 1201px)'

font-size(value, r = true)
    font-size value px
    if r
        font-size (value / $rootFontVal) rem

lineHeight(value)
    line-height (value / $rootFontVal)

toRem(prop, value)
    {prop} value px
    {prop} (value / $rootFontVal) rem

tr(type, time)
    transition type time ease-in-out

selection(bg, color)
    ::selection
        background bg
        color color

    ::-moz-selection
        background bg
        color color

clearfix()
    &:after
        content ''
        display block
        height 0
        visibility hidden
        clear both

fadeOut(time)
    visibility hidden
    opacity 0
    transition visibility ease-in-out time, opacity time ease-in-out

fadeIn()
    opacity 1
    visibility visible

noSelect()
    -webkit-user-select none
    -moz-user-select none
    -o-user-select none
    -ms-user-select none
    user-select none

align()
    top 0
    left 0
    bottom 0
    right 0
    margin auto

hAlign()
    left 0
    right 0
    margin auto

vAlign()
    top 0
    bottom 0
    margin auto

spriteWidth($sprite) {
    width: $sprite[4];
}

spriteHeight($sprite) {
    height: $sprite[5];
}

spritePosition($sprite) {
    background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
    background-image: url(../img/$sprite[8]);
}

sprite($sprite)
    if !match('hover', selector()) && !match('active', selector())
        spriteImage($sprite)
    spritePosition($sprite)
    spriteWidth($sprite)
    spriteHeight($sprite)

v-out(align = middle)
    font-size 0
    &:before
        content ''
        height 100%
        display inline-block
        vertical-align align

v-in(align = middle)
    font-size $rootFontSize
    display inline-block
    vertical-align align
    width 100%

.im-popup
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    text-align center
    z-index 25
    font-size 0
    background-color rgba(0, 0, 0, 0.58)
    fadeOut(.3s)
    &:before
        content ''
        height 100%
        display inline-block
        vertical-align middle
    .im-popup-inside
        display inline-block
        vertical-align middle
        font-size 16px
    &._visible
        fadeIn()

circle($diameter)
    width $diameter
    height $diameter
    border-radius $diameter

dashed-underline($color = #000, $pseudo = ':after')
    position relative
    text-decoration none
    &{$pseudo}
        content ''
        position absolute
        width 100%
        height 1px
        border-bottom 1px dashed $color
        bottom 0
        left 0
    &:hover
        &{$pseudo}
            display none

table($vAlign = top)
    display table
    width 100%
    table-layout fixed
    &__left, &__right
        display table-cell
        vertical-align $vAlign

placeholder($color)
    &::-webkit-input-placeholder
        color $color
    &::-moz-placeholder
        color $color
    &:-moz-placeholder
        color $color
    &:-ms-input-placeholder
        color $color

owlNav(prevIcon, nextIcon, padding)
    .owl-prev
        sprite(prevIcon)
        float left
    .owl-next
        sprite(nextIcon)
        float right
    .owl-nav
        position absolute
        width 100%
        left 0
        vAlign()
        spriteHeight(prevIcon)
    .owl-carousel
        position relative
        padding padding
    .owl-stage-outer
        z-index 2

item(prop, value)
    {prop} value
    &:last-child
        {prop} 0

colsWrap(cols, xOffset, yOffset)
    overflow hidden
    &__cols-wrap
        margin (-(yOffset/2))px (-(xOffset/2))px
        font-size 0
    &__col
        font-size $rootFontSize
        display inline-block
        vertical-align top
        padding (yOffset/2)px (xOffset/2)px
        width (100/cols)%

stick()
    position absolute
    top 0
    left 0
    width 100%
    height 100%


resp(full = false)
    if full
        width 100%
    else
        max-width 100%
    height auto
